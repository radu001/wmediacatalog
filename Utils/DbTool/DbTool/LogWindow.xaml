<Window x:Class="DbTool.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogWindow" Height="414" Width="540" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="LogTextBox" Grid.Row="0" AcceptsReturn="True" Margin="4"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Right" Margin="4">
            <Hyperlink RequestNavigate="HandleLinkClick" NavigateUri="http://code.google.com/p/wmediacatalog/issues/entry?template=Defect%20report%20from%20user">
                <TextBlock Text="Send report to developers"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
